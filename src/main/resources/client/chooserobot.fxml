<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.RobotSelectionController">
   <children>
      <TextField fx:id="player_name" layoutX="58.0" layoutY="342.0" promptText="enter name" />
      <Button fx:id="confirm_robot" disable="true" layoutX="243.0" layoutY="342.0" mnemonicParsing="false" onAction="#confirmRobot" text="confirm" />
      <RadioButton id="1" fx:id="robot_1" layoutX="58.0" layoutY="147.0" mnemonicParsing="false" text="bot 1">
         <toggleGroup>
            <ToggleGroup fx:id="robots" />
         </toggleGroup>
      </RadioButton>
      <RadioButton id="2" fx:id="robot_2" layoutX="257.0" layoutY="147.0" mnemonicParsing="false" text="bot 2" toggleGroup="$robots" />
      <RadioButton id="3" fx:id="robot_3" layoutX="453.0" layoutY="147.0" mnemonicParsing="false" text="bot 3" toggleGroup="$robots" />
      <RadioButton id="4" fx:id="robot_4" layoutX="58.0" layoutY="282.0" mnemonicParsing="false" text="bot 4" toggleGroup="$robots" />
      <RadioButton id="5" fx:id="robot_5" layoutX="257.0" layoutY="282.0" mnemonicParsing="false" text="bot 5" toggleGroup="$robots" />
      <RadioButton id="6" fx:id="robot_6" layoutX="453.0" layoutY="282.0" mnemonicParsing="false" text="bot 6" toggleGroup="$robots" />
      <ToggleButton fx:id="ready_button" layoutX="368.0" layoutY="342.0" mnemonicParsing="false" onAction="#confirmReady" text="READY!" underline="true">
         <toggleGroup>
            <ToggleGroup fx:id="ready" />
         </toggleGroup>
      </ToggleButton>
      <ToggleButton fx:id="not_ready_button" layoutX="469.0" layoutY="342.0" mnemonicParsing="false" onAction="#confirmUnready" text="not ready" toggleGroup="$ready" />
   </children>
</AnchorPane>
