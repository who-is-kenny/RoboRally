<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="330.0" prefWidth="900.0" stylesheets="@style/RegisterCard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Top Row (Selected Cards) -->
    <HBox alignment="TOP_LEFT" prefHeight="150.0" prefWidth="900.0" spacing="10.0">
        <Pane prefHeight="200.0" prefWidth="220.0" HBox.hgrow="NEVER" />
        <HBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="150.0" prefWidth="600.0" spacing="10.0" HBox.hgrow="SOMETIMES">
            <children>
                <Pane fx:id="selectedCard1" prefHeight="100.0" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
                <Pane fx:id="selectedCard2" prefHeight="100.0" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
                <Pane fx:id="selectedCard3" prefHeight="100.0" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
                <Pane fx:id="selectedCard4" prefHeight="100.0" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
                <Pane fx:id="selectedCard5" prefHeight="100.0" prefWidth="120.0" HBox.hgrow="SOMETIMES" />
            </children>
        </HBox>
        <Pane prefHeight="200.0" prefWidth="300.0" />
    </HBox>

    <!-- Middle Row (Card Selection) -->
    <HBox alignment="BOTTOM_LEFT" prefHeight="150.0" prefWidth="900.0" spacing="5.0">
      <Pane nodeOrientation="LEFT_TO_RIGHT" prefHeight="150.0" prefWidth="800.0" HBox.hgrow="SOMETIMES">
         <children>
              <Button fx:id="card1" alignment="CENTER" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 1" textOverrun="CLIP" />
              <Button fx:id="card2" alignment="CENTER" layoutX="89.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 2" textOverrun="CLIP" />
              <Button fx:id="card3" alignment="CENTER" layoutX="177.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 3" textOverrun="CLIP" />
              <Button fx:id="card4" alignment="CENTER" layoutX="266.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 4" textOverrun="CLIP" />
              <Button fx:id="card5" alignment="CENTER" layoutX="354.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 5" textOverrun="CLIP" />
              <Button fx:id="card6" alignment="CENTER" layoutX="443.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 6" textOverrun="CLIP" />
              <Button fx:id="card7" alignment="CENTER" layoutX="531.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 7" textOverrun="CLIP" />
              <Button fx:id="card8" alignment="CENTER" layoutX="620.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 8" textOverrun="CLIP" />
              <Button fx:id="card9" alignment="CENTER" layoutX="708.0" layoutY="16.0" prefHeight="120.0" prefWidth="80.0" text="Card 9" textOverrun="CLIP" />
         </children>
      </Pane>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="50.0" prefWidth="80.0" spacing="10.0">
            <children>
                <Button fx:id="submitButton" prefHeight="50.0" prefWidth="75.0" text="Submit" />
                <Button fx:id="resetButton" prefHeight="50.0" prefWidth="75.0" text="Reset" />
            </children>
        </VBox>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
